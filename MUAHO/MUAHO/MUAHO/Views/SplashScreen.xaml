<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MUAHO.SplashScreen"
             NavigationPage.HasNavigationBar="False"
             xmlns:local="clr-namespace:MUAHO.Plugins"
             >
    <ContentPage.Content>
        <AbsoluteLayout >
            <Image  x:Name="imgLogo"
                    Source="{local:ImageEmbedResource MUAHO.Resources.Images.b.jpg}"  
                    Aspect="AspectFill"
                    AbsoluteLayout.LayoutBounds="1,1,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    />
            <BoxView Color="White"
                     Opacity="0.85"
                     AbsoluteLayout.LayoutBounds="1,1,1,1"
                    AbsoluteLayout.LayoutFlags="All"/>
            <Image  Source="{local:ImageEmbedResource MUAHO.Resources.Images.logo.png}"
                    AbsoluteLayout.LayoutBounds="0.5,0.5, 0.6, 0.25"
                    AbsoluteLayout.LayoutFlags="All"
                    />
            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>